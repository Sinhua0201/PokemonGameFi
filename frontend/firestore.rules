rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(walletAddress) {
      return isAuthenticated() && request.auth.uid == walletAddress;
    }
    
    // Players collection
    match /players/{walletAddress} {
      // Anyone can read player data
      allow read: if true;
      
      // Only the owner can create or update their player document
      allow create: if isOwner(walletAddress);
      allow update: if isOwner(walletAddress);
      
      // No one can delete player documents
      allow delete: if false;
    }
    
    // Game state collection
    match /gameState/{walletAddress} {
      // Only the owner can read their game state
      allow read: if isOwner(walletAddress);
      
      // Only the owner can create or update their game state
      allow create: if isOwner(walletAddress);
      allow update: if isOwner(walletAddress);
      
      // No one can delete game state
      allow delete: if false;
    }
    
    // Battle history collection
    match /battleHistory/{battleId} {
      // Anyone can read battle history
      allow read: if true;
      
      // Only authenticated users can create battle records
      allow create: if isAuthenticated();
      
      // No one can update or delete battle history
      allow update: if false;
      allow delete: if false;
    }
    
    // Marketplace listings collection
    match /marketplaceListings/{listingId} {
      // Anyone can read marketplace listings
      allow read: if true;
      
      // Only authenticated users can create listings
      allow create: if isAuthenticated();
      
      // Only the seller can update their listing (cancel)
      // Or anyone can update to mark as sold (handled by backend)
      allow update: if isAuthenticated() && (
        resource.data.sellerAddress == request.auth.uid ||
        request.resource.data.status == 'sold'
      );
      
      // No one can delete listings
      allow delete: if false;
    }
    
    // Pokémon cache collection
    match /pokemonCache/{pokemonId} {
      // Anyone can read cached Pokémon data
      allow read: if true;
      
      // Only authenticated users can write to cache (typically backend)
      allow write: if isAuthenticated();
    }
  }
}
