rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Players collection - wallet address as document ID
    match /players/{walletAddress} {
      // Anyone can read player data
      allow read: if true;
      
      // Any authenticated user can create or update player documents
      // (wallet address is stored in the document, not matched to auth.uid)
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      
      // No one can delete player documents
      allow delete: if false;
    }
    
    // Game state collection - wallet address as document ID
    match /gameState/{walletAddress} {
      // Any authenticated user can read game state
      allow read: if isAuthenticated();
      
      // Any authenticated user can create or update game state
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      
      // No one can delete game state
      allow delete: if false;
    }
    
    // Battle history collection
    match /battleHistory/{battleId} {
      // Anyone can read battle history
      allow read: if true;
      
      // Only authenticated users can create battle records
      allow create: if isAuthenticated();
      
      // No one can update or delete battle history
      allow update: if false;
      allow delete: if false;
    }
    
    // Marketplace listings collection
    match /marketplaceListings/{listingId} {
      // Anyone can read marketplace listings
      allow read: if true;
      
      // Only authenticated users can create listings
      allow create: if isAuthenticated();
      
      // Only authenticated users can update listings
      // (seller verification happens in application logic)
      allow update: if isAuthenticated();
      
      // No one can delete listings
      allow delete: if false;
    }
    
    // Pokémon cache collection
    match /pokemonCache/{pokemonId} {
      // Anyone can read cached Pokémon data
      allow read: if true;
      
      // Only authenticated users can write to cache
      allow write: if isAuthenticated();
    }
  }
}
